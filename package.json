{
  "name": "wot-ui-intellisense",
  "displayName": "wot-ui intellisense",
  "publisher": "wot-ui",
  "description": "一个为 Wot UI 组件库提供智能提示的 VS Code 插件，由 Wot UI 团队开发。",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:vue",
    "onLanguage:html"
  ],
  "main": "./dist/extension.js",
  "icon": "public/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/wot-ui/wot-ui-intellisense.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "wot-ui-intellisense.toggleIntellisense",
        "title": "Toggle Wot UI IntelliSense"
      },
      {
        "command": "wot-ui-intellisense.refreshComponents",
        "title": "Refresh Wot UI Components"
      }
    ],
    "languages": [
      {
        "id": "vue",
        "extensions": [
          ".vue"
        ],
        "aliases": [
          "Vue",
          "vue"
        ]
      },
      {
        "id": "html",
        "extensions": [
          ".html"
        ],
        "aliases": [
          "HTML",
          "html"
        ]
      }
    ],
    "grammars": [],
    "configuration": {}
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "vsce package --no-dependencies",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "commit": "git-cz",
    "release-major": "standard-version --release-as major",
    "release-minor": "standard-version --release-as minor",
    "release-patch": "standard-version --release-as patch"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/turndown": "^5.0.5",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "commitizen": "^4.3.1",
    "copy-webpack-plugin": "^13.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.25.1",
    "git-cz": "^4.9.0",
    "standard-version": "^9.5.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "volta": {
    "node": "22.17.0"
  },
  "dependencies": {
    "@joplin/turndown-plugin-gfm": "^1.0.63",
    "@truto/turndown-plugin-gfm": "^1.0.2",
    "@types/cheerio": "^0.22.35",
    "cheerio": "^1.1.2",
    "turndown": "^7.2.1"
  }
}
